<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Teal"
    tools:context=".M0600">

    <Button
        android:id="@+id/m0600_b001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/Yellow"
        android:text="@string/m0600_b001"
        android:textSize="14sp" />

    <Button
        android:id="@+id/m0600_b002"
        android:layout_width="@dimen/p80"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m0600_b001"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/m0600_b001"
        android:background="@color/Yellow"
        android:text="@string/m0600_b002" />

    <Button
        android:id="@+id/m0600_b003"
        android:layout_width="@dimen/p80"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/m0600_b002"
        android:layout_marginStart="4dp"
        android:layout_marginTop="-57dp"
        android:layout_marginBottom="6dp"
        android:layout_toEndOf="@+id/m0600_b002"
        android:background="@color/Yellow"
        android:text="@string/m0600_b003" />

    <Button
        android:id="@+id/m0600_b004"
        android:layout_width="@dimen/p80"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m0600_b003"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/m0600_b003"
        android:background="@color/Yellow"
        android:text="@string/m0600_b004" />

    <TextView
        android:id="@+id/myname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m0600_b004"
        android:layout_marginStart="-54dp"
        android:layout_marginTop="71dp"
        android:layout_toEndOf="@+id/m0600_b004"
        android:text="@string/myname"
        android:textColor="@color/White"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>